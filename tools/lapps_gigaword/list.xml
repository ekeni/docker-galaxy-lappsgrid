<tool id='gigaword.list' name='Gigaword List' version='1.0.0'>
    <description>Obtain a list of document ID values available from the Gigaword Datasource.</description>
    <command interpreter='lsd'>list.lsd $corpus.start $corpus.end $output $corpus.name $password</command>
    <inputs>
      <conditional name="corpus">
          <param name="name" type="select">
            <option value="kidnap1">Kidnap 1 (Gigaword)</option>
            <option value="kidnap2">Kidnap 2 (Gigaword)</option>
          </param>
          <when value="kidnap1">
              <param name="start" type="integer" value="0" min="0"/>
              <param name="end" type="integer" value="99" max="2624"/>
          </when>
          <when value="kidnap2">
              <param name="start" type="integer" value="0" min="0"/>
              <param name="end" type="integer" value="99" max="2071"/>
          </when>
      </conditional>
	    <param name="password" type="text" label="Password"/>
      <!--
    	<param name="corpus" type="select">
    		<option value="kidnap1">Kidnap 1 (Gigaword)</option>
    		<option value="kidnap2">Kidnap 2 (Gigaword)</option>
    	</param>
        <param name="start" type="text" label="Start" value="0"/>
        <param name="end" type="text" label="End" value="480"/>
        -->
    </inputs>
    <outputs>
        <data name='output' format='txt'/>
    </outputs>
</tool>