<tool id="gigaword.collection" name="Create Gigaword Collection" version="1.0.0">
  <command interpreter="lsd">create_collection.lsd $start $end $corpus</command>
  <inputs>
  	  <param name="corpus" type="select">
  	  	<option value="gigaword">Kidnap 1 (Gigaword)</option>
  	  	<option value="kidnap2">Kidnap 2 (Gigaword)</option>
  	  </param>
      <param name="start" type="integer" value="0" min="0"/>
      <param name="end" type="integer" value="2624"/>
  </inputs>
  <outputs>
    <collection name="list_output" type="list" label="Output List" format="lif">
        <discover_datasets pattern="__designation_and_ext__" directory="outputs" visible="false"/>
    </collection>
  </outputs>
  <tests>
  </tests>
</tool>
