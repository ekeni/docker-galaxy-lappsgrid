<tool id='gigaword.get' name='Gigaword Get' version='1.0.0'>
    <description>Retreive a single document from the Gigaword Datasource.</description>
    <command interpreter='lsd'>get.lsd $key $output $corpus $password</command>
    <inputs>
    	<param name="corpus" type="select">
    		<option value="kidnap1">Kidnap 1 (Gigaword)</option>
    		<option value="kidnap2">Kidnap 2 (Gigaword)</option>
    	</param>
	    <param name="password" type="text" label="Password"/>
        <param name="key" type="text" label="Document ID" value="NYT_ENG_20050622.0308"/>
    </inputs>
    <outputs>
        <data name='output' format='ldc'/>
    </outputs>
</tool>